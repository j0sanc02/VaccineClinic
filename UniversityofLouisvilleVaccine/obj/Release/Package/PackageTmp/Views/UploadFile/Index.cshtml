
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Upload", "UploadFile", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <br />

    <h2>Upload Files</h2>
    <fieldset>


        <a class="btn btn-primary btn-danger" action=@Html.ActionLink("List Of Uploaded Files", "Index", "Grant2")
            <br />
            <br />
            <br />
            <div class="editor-field">
                @Html.TextBox("file", "", new { type = "file" })
            </div>
            <br />
            <br />
            <div class="editor-field">
                <input class="btn btn-primary btn-danger" type="submit" value="Upload" />
            </div>

    </fieldset>
}

