
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Upload", "UploadFile", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <div class="jumbotron">
            <h1>Upload Files</h1>
            <br />
            <li>@Html.ActionLink("List Of Uploaded Files", "Index", "Grant2")</li>
            <br />
            <div class="editor-field">
                @Html.TextBox("file", "", new { type = "file" })
            </div>
            <br />
            <div class="editor-field">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </fieldset>
}

