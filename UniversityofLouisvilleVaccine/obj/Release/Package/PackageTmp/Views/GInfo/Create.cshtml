@model UniversityofLouisvilleVaccine.Models.GInfo

@{
    ViewBag.Title = "Create";

    ViewBag.coord = new SelectList(new List<string>() { "Jane Doe", "Jone Doe", "Josh Britton" });
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Grant Information</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.grantTitle, new { @class = "control-label col-md-4" })
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.grantTitle, new { style = "width:175px", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.grantTitle)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.grantStart, new { @class = "control-label col-md-4" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.grantStart)
                    @Html.ValidationMessageFor(model => model.grantStart)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.grantEnd, new { @class = "control-label col-md-4" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.grantEnd)
                    @Html.ValidationMessageFor(model => model.grantEnd)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.grantAmount, new { @class = "control-label col-md-4" })
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.grantAmount, new { style = "width:175px", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.grantAmount)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.grantFunder, new { @class = "control-label col-md-4" })
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.grantFunder, new { style = "width:175px", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.grantFunder)
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.collaborator, new { @class = "control-label col-md-4" })
                <div class="col-md-3">
                    @Html.TextAreaFor(model => model.collaborator, new { style = "width:300px", rows = 5, @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.collaborator)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.coordName, new { @class = "control-label col-md-4" })
                <div class="col-md-3">
                    @Html.DropDownListFor(model => model.coordName, (SelectList)ViewBag.coord, new { style = "width:175px", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.coordName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.deadline, new { @class = "control-label col-md-4" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.deadline)
                    @Html.ValidationMessageFor(model => model.deadline)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.maxPages, new { @class = "control-label col-md-4" })
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.maxPages, new { style = "width:175px", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.maxPages)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-9 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
