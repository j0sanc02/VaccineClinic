@model IEnumerable<UniversityofLouisvilleVaccine.Models.Vaccine>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<br />
<br />
<h2>Vaccine Inventory</h2>
<hr />




    @using (Html.BeginForm())
{

    <div class="col-md-1 btn btn-default">
        @Html.ActionLink("Create New", "Create", null, new { @class = "classname" })
    </div>

    @*<div class="col-md-3">
        ID: @Html.TextBox("SearchID")
        <input type="submit" value="Filter" />
