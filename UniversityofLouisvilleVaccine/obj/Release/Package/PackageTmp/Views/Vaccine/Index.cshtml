    <div class=" col-md-4">
        Name: @Html.TextBox("SearchString")
        <input type="submit" value="Filter" />
    </div>
    
    <div class="col-md-3">
        Lot #: @Html.DropDownList("lotNumber", " ")
        <input type="submit" value="Filter"/>
    </div>

    <div class="col-md-1 btn btn-default">
        @Html.ActionLink("Excel", "ExporttoExcel", "Vaccine")
    </div>              
 
    <br />
    <table class="table table-striped table-hover table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.vaccineID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.vaccineName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dateReceived)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.CPT)
