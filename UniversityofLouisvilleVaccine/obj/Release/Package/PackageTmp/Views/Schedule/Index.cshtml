
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<div id="scheduleForm" class="container">
    <div class="row">
        <div class="form-group">
            <label for="appointmentCheckbox">Type of patient:</label>
            <div id="appointmentCheckbox" class="checkbox">
                <label><input type="checkbox" value="">New Patient</label>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" value="">Returning Patient</label>
            </div>
            <br>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <!-- 				    <label id="fnameLabel"class="control-label col-sm-2" for="fname">First Name:</label>
                     -->
                    <div class="col-sm-12">
                        <input type="text" class="form-control" id="fname" placeholder="First Name">
                    </div>
                </div>
                <div class="form-group">
                    <!-- <label class="control-label col-sm-2" for="lname">Last Name:</label> -->
                    <div class="col-sm-12">
                        <input type="text" class="form-control" id="lname" placeholder="Last Name">
                    </div>
                </div>
                <div class="form-group">
                    <!-- 				    <label class="control-label col-sm-2" for="date">Date:</label>
                     -->
                    <div class="col-sm-12">
                        <input type="date" class="form-control" id="date">
                    </div>
                </div>
                <div class="form-group">
                    <!-- 				    <label class="control-label col-sm-2" for="email">Email:</label>
                     -->
                    <div class="col-sm-12">
                        <input type="email" class="form-control" id="email" placeholder="Email">
                    </div>
                </div>

                <!--   				<label for="comment">Comment:</label>
                 -->
                <textarea class="form-control" rows="5" id="comment"></textarea>
            </form>
        </div>
    </div>
</div>
<div>
    <div class="col-sm-12">
        <a href="#" id="saveButton" class="btn btn-danger">Submit</a>
        <a href="#" id="cancelButton" class="btn btn-danger">Cancel</a>
    </div>
</div>


