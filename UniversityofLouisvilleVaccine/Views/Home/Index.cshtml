@{
    ViewBag.Title = "Home Page";
}


<head>
    <title>
        Home Page
    </title>
    <link rel="stylesheet" type="text/css" href="~/Content/CSS/HomeStyle.css">
</head>

<br />
<br />
<br />
<div class="alert alert-warning" role="alert" style="text-align:center">Vaccine Alerts! Vaccines need to be ordered.<br /><a href="#" class="btn btn-danger">Go to Vaccine Inventory</a></div>

<div class="row">
    <p>
         <div class="row">
            <div class="col-md-5">
                <h3>Message Center</h3>
                <img id="messageImage" src="~/Content/Images/message.png" style="height:400px; max-width:600px">
            </div>
            <div class="col-md-7">
                <h3>Appointments</h3>
                <div id="calendar"></div>

                @section scripts{
                    <script type="text/javascript">


                        $(document).ready(function () {

                            $('#calendar').fullCalendar({
                                header: {
                                    left: 'prev,next today',
                                    center: 'title',
                                    right: 'month,agendaWeek,agendaDay'
                                },

                                //theme: true,

                                defaultView: 'agendaDay',
                                editable: true,
                                allDaySlot: false,
                                selectable: true,
                                slotMinutes: 15,
                                defaultTimedEventDuration: 15,
                                forceEventDuration: true,
                                //eventSource: [events]
                                events: "/home/getevents"
                            });
                        });


                    </script>
                }
            </div>
        </div>
</div>


<br />
<br />